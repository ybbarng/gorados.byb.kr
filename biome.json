{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "javascript": {
    "globals": ["$", "L"]
  },
  "files": {
    "ignore": [
      "node_modules",
      "app/js/map.js",
      "app/css",
      "*.min.js",
      "*.min.css",
      "data.db",
      "pnpm-lock.yaml",
      "pokemons",
      "hash_test",
      "*.csv",
      "*.sql",
      "data/",
      "scripts/",
      "dist/"
    ]
  }
}
